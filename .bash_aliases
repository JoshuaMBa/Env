# Moving directories
alias cdo="cd ~-"
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="../../../.."

# Terminal Display
alias l="ls -F"
alias ll="ls -lF"
alias la="ls -aF"
alias lla="ls -laF"
alias lal="ls -laF"
alias cl="clear" 

# File analysis
alias diff="diff --color=auto"
alias grep="grep -n --color=auto"
alias grepr="grep -R"

# File creation and deletion
alias vi="vim"
alias vs="code"
alias t="touch"
alias rmr="rm -r"
alias rmf="rm -f"

# Permissions
alias please="sudo"

# which command alternative
alias type="type -P"
alias typea="type -a" 
